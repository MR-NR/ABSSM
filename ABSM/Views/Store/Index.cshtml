@model IEnumerable<ABSM.Models.Shop>
@{
    ViewBag.Title = "Shopping Cart";
}

<!-- Titlebar
================================================== -->
<section class="titlebar">
    <div class="container">
        <div class="sixteen columns">
            <h2>Shop</h2>

            <nav id="breadcrumbs">
                <ul>
                    <li><a href="#">Home</a></li>
                    <li><a href="#">Products</a></li>
                    <li>Categories</li>
                </ul>
            </nav>
        </div>
    </div>
</section>

<div class="container product-categories">
    @foreach (var shop in Model)
    {
        <div class="four columns">
            <a href="@Url.Action("Browse", new { id = shop.ShopID })" class="img-caption">
                <figure>
                    <img src="@Url.Content(shop.ImageUrl)" alt="" />
                    <figcaption>
                        <h3>@shop.Name</h3>
                        <span>Browse Products</span>
                    </figcaption>
                </figure>
            </a>
        </div>
    }


</div>


<!-- Container -->

<!-- Container / End -->
<div class="margin-top-50"></div>

